{
  "compilerOptions": {
    "target": "esnext",
    "strict": false,
    "jsx": "react",
    "moduleResolution": "node",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src", "types", "build"],
  "exclude": ["node_modules"]
}
